<h2 class="mb-4">ユーザー一覧</h2>

<table class="table table-striped table-hover align-middle">
  <thead class="table-light">
    <tr>
      <th>名前</th>
      <th>メール</th>
      <th>登録日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
        <td>
          <%= link_to '詳細', admin_user_path(user), class: 'btn btn-outline-primary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
