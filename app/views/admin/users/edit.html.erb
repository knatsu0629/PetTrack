<h2 class="mb-4"><%= @user.name %> さんの会員情報編集</h2>

<%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :is_active, "会員ステータス" %>
    <%= f.select :is_active, [['有効', true], ['退会', false]], class: "form-control" %>
  </div>

  <div class="d-flex ms-4">
    <%= f.submit '保存', class: 'btn btn-primary', style: 'margin-right: 10px;' %>
    <%= link_to '戻る', admin_users_path, class: 'btn btn-secondary' %>
  </div>
<% end %>