<div class="container">
  <h2 class="mb-4"><%= @user.name %> さんの会員詳細</h2>

  <div class="row mb-3">
    <div class="col-md-2">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize: "100x100"), class: "rounded-circle ms-3", alt: @user.name %>
      <% else %>
        <p class="ms-3">プロフィール画像なし</p>
      <% end %>
    </div>

    <div class="col-md-10">
      <table class="table table-sm table-borderless align-middle ms-3">
        <tbody>
          <tr>
            <th style="width: 120px;">会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th style="width: 200px;">メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th style="width: 200px;">登録日</th>
            <td><%= @user.created_at.strftime('%Y-%m-%d') %></td>
          </tr>
          <tr>
            <th style="width: 200px;">会員ステータス</th>
            <td>
              <% if @user.is_active %>
                <span class="text-success font-weight-bold">有効</span>
              <% else %>
                <span class="text-danger font-weight-bold">退会</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="d-flex ms-4">
  <%= button_to '退会', admin_user_path(@user),
                method: :delete,
                data: { confirm: '本当に退会させますか？' },
                class: 'btn btn-danger', style: 'margin-right: 10px;' %>

  <%= link_to '戻る', admin_dashboards_path, class: 'btn btn-secondary', style: 'display: inline-block; height: 100%;' %>
</div>



