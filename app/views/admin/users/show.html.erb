<h2 class="mb-4"><%= @user.name %> さんのプロフィール</h2>

<div class="mb-3">
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar.variant(resize: "100x100"), class: "rounded-circle mb-3", alt: @user.name %>
  <% else %>
    <p>プロフィール画像なし</p>
  <% end %>
  <p><strong>メール:</strong> <%= @user.email %></p>
  <p><strong>登録日:</strong> <%= @user.created_at.strftime('%Y-%m-%d') %></p>
</div>

<div class="d-flex">
  <div style="margin-right: 10px;">
    <%= button_to '退会', admin_user_path(@user),
                  method: :delete,
                  data: { confirm: '本当に退会させますか？' },
                  class: 'btn btn-danger' %>
  </div>

  <div>
    <%= link_to '戻る', admin_dashboards_path, class: 'btn btn-secondary' %>
  </div>
</div>