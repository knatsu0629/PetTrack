<h1>編集画面</h1>

<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <%= @post.errors.count %>件のエラーが発生しました
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <% if @post.image.attached? %>
    <p>現在の画像:</p>
    <%= image_tag @post.image, size: "200x200" %>
  <% end %>
  <h4>画像をアップロード</h4>
  <%= f.file_field :image %>
 
  <%= f.submit '保存' %>
<% end %>