<h1>新規投稿</h1>

<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <%= @post.errors.count %>件のエラーが発生しました
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true, html: { multipart: true } do |f| %>
  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.submit '投稿' %>
  </div>
<% end %>

<%= link_to '投稿一覧に戻る', posts_path, class: 'btn btn-secondary', style: 'margin-top: 20px;' %>
