<h1>投稿一覧</h1>
<p><%= link_to '＋ 投稿する', new_post_path, class: 'btn btn-success' %></p>


<% @posts.each do |post| %>

  <% if post.image.attached? %>
    <%= image_tag(post.image, width: 300) %>
  <% else %>
    <p>画像なし</p>
  <% end %>

  <h2>
    <%= link_to post.title, post_path(post.id)  %>
  </h2>

  <p><%= truncate(post.body, length: 100) %></p> 

  <hr>
<% end %>