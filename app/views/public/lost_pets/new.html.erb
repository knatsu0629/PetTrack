<main>
  <h1>迷子ペットの投稿</h1>
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">

        <%= form_with(model: @lost_pet, local: true) do |form| %>
          <% if @lost_pet.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                <% @lost_pet.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :title, 'タイトル' %>
            <%= form.text_field :title, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :image, 'ペットの写真' %>
            <%= form.file_field :image, class: 'form-control-file' %>
          </div>

          <div class="form-group">
            <%= form.label :name, 'ペットの名前' %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :animal_type, 'ペットの種類' %>
            <%= form.text_field :animal_type, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :gender, '性別' %>
            <%= form.select :gender, [['オス', 0], ['メス', 1], ['不明', 2]], { include_blank: '選択してください' }, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :feature, '特徴' %>
            <%= form.text_area :feature, class: 'form-control', rows: 3 %>
          </div>

          <div class="form-group">
            <%= form.label :description, '詳細説明' %>
            <%= form.text_area :description, class: 'form-control', rows: 4 %>
          </div>

          <div class="form-group">
            <%= form.label :missing_date, '行方不明日' %>
            <%= form.date_field :missing_date, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :last_seen_location, '迷子になったおおまかな場所' %>
            <%= form.text_field :last_seen_location, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :zipcode, '迷子になった郵便番号' %>
            <%= form.text_field :zipcode, class: "form-control", placeholder: "郵便番号", id: "zipcode" %>
          </div>     

          <div class="form-group">
            <%= form.label :address, '迷子になった住所' %>
            <%= form.text_field :address, class: "form-control", placeholder: "住所", id: "lost_pet_address" %>
          </div>

          <div class="form-group">
            <%= form.label :status, 'ステータス' %>
            <%= form.select :status, [['未発見', 0], ['発見', 1]], class: 'form-control' %>
          </div>

          <%= form.submit '投稿する', class: 'btn btn-primary' %>
        <% end %>

        <%= link_to '投稿一覧に戻る', posts_path, class: 'btn btn-secondary', style: 'margin-top: 20px;' %>
      </div>
    </div>
  </div>
  <%= javascript_pack_tag "jpostal",  'data-turbolinks-track': 'reload' %>
</main>

